<aura:component >


    <!-- Mark Up -->

    <div role="dialog" tabindex="-1" aria-labelledby="header43" class="slds-modal slds-fade-in-open">
      <div class="slds-modal__container">
        <div class="slds-modal__header">
          <button class="slds-button slds-modal__close slds-button--icon-inverse" title="Close" onclick="{!c.closeModal}">
            X
            <span class="slds-assistive-text">Close</span>
          </button>
          <h2 id="header43" class="slds-text-heading--medium">Create New Post</h2>
        </div>
        <div class="slds-modal__content slds-p-around--medium">
            <!-- Would add validation if time! -->
            <div class="slds-form-element">
              <label class="slds-form-element__label" for="title">Post Title</label>
              <div class="slds-form-element__control">
                <input type="text" id="title" class="slds-input" placeholder="I've found the answer!" />
                <div class="slds-form-element">
                  <label class="slds-form-element__label" for="text">Textarea Label</label>
                  <div class="slds-form-element__control">
                    <textarea id="text" class="slds-textarea" placeholder="the answer to life the universe and everything is 42."></textarea>
                  </div>
                </div>
              </div>
            </div>
        </div>
        <div class="slds-modal__footer">
          <button class="slds-button slds-button--neutral" onclick="{!c.closeModal}">Cancel</button>
          <button class="slds-button slds-button--brand" onclick="{!c.newPost}">Add</button>
        </div>
      </div>
    </div>
    <div class="slds-backdrop slds-backdrop--open"></div>
</aura:component>
